#:kivy 2.0

<TransilvaniaRegionScreen>:
    FloatLayout:
        # Background
        canvas.before:
            Color:
                rgba: app.get_color('REGION_BG')
            Rectangle:
                size: 1280, 800
                pos: 0, 0

        # Header
        FloatLayout:
            size_hint: 0.95, 0.13
            pos_hint: {'center_x': 0.5, 'top': 0.99}

            canvas.before:
                Color:
                    rgba: app.get_color('HEADER_BG')
                RoundedRectangle:
                    pos: 32, 696
                    size: 1216, 104
                    radius: [25]

            Label:
                text: 'TRANSILVANIA'
                font_size: '42sp'
                bold: True
                color: app.get_color('HEADER_TITLE')
                size_hint: 1, 0.65
                pos_hint: {'center_x': 0.5, 'top': 1.0}

            Label:
                text: 'Relieful de Poveste'
                font_size: '24sp'
                color: app.get_color('HEADER_SUBTITLE')
                size_hint: 1, 0.35
                pos_hint: {'center_x': 0.5, 'top': 0.4}

        # Sidebar stanga (Harta + Mascota)
        FloatLayout:
            size_hint: 0.28, 0.7
            pos_hint: {'x': 0.02, 'center_y': 0.48}

            # Harta
            FloatLayout:
                size_hint: 1, 0.45
                pos_hint: {'center_x': 0.5, 'top': 1.0}

                Image:
                    source: root.map_source
                    size_hint: 0.95, 0.95
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    fit_mode: "contain"

            # Mascota
            FloatLayout:
                size_hint: 0.9, 0.5
                pos_hint: {'center_x': 0.5, 'y': 0.05}

                Image:
                    source: root.mascot_source
                    size_hint: 0.8, 0.85
                    pos_hint: {'center_x': 0.5, 'top': 1.0}
                    fit_mode: "contain"

                Label:
                    text: 'Geo - Muntii'
                    font_size: '18sp'
                    bold: True
                    color: app.get_color('MASCOT_NAME')
                    size_hint: 1, 0.15
                    pos_hint: {'center_x': 0.5, 'y': 0.05}