#:import image_path frontend.utils.assets.image_path
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout

<MenuScreen>:
    name: 'menu'

    FloatLayout:
        Image:
            source: image_path("menu/dashboard_bg.png")
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            md_bg_color: 0, 0, 0, 0.3
            size_hint: 1, 1

        MDLabel:
            text: "CAMPIONII ROMÂNIEI"
            halign: "center"
            pos_hint: {"center_x": 0.503, "center_y": 0.845}
            font_name: image_path("menu/RAVIE.TTF")
            font_size: "42sp"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 0.5
            bold: True

        MDLabel:
            text: "CAMPIONII ROMÂNIEI"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            font_name: image_path("menu/RAVIE.TTF")
            font_size: "42sp"
            theme_text_color: "Custom"
            text_color: 0, 0.6, 1, 1
            outline_color: 1, 1, 1, 0.3
            outline_width: 1

        MDBoxLayout:
            orientation: "vertical"
            spacing: root.height * 0.02

            size_hint_x: 0.5
            adaptive_height: True

            pos_hint: {"center_x": 0.5, "y": 0.12}

            # BUTON START
            ImageButton:
                source: image_path("buttons/btn_start.png")
                size_hint_x: 1
                size_hint_y: None
                height: root.height * 0.13
                allow_stretch: True
                on_release: app.clouds.change_screen('map')

            ImageButton:
                source: image_path("buttons/btn_statistics.png")
                size_hint_x: 1
                size_hint_y: None
                height: root.height * 0.13
                allow_stretch: True
                on_release: app.clouds.change_screen('statistics')

            ImageButton:
                source: image_path("buttons/btn_cosmetics.png")
                size_hint_x: 1
                size_hint_y: None
                height: root.height * 0.1
                allow_stretch: True
                on_release: app.clouds.change_screen('cosmetics')