<RandStatistica@MDBoxLayout>:
    titlu: ""
    valoare: ""
    orientation: "horizontal"
    size_hint_y: None
    height: "35dp"
    padding: "10dp", 0
    spacing: "10dp"

    MDLabel:
        text: root.titlu
        font_name: image_path("menu/RAVIE.TTF")
        font_size: "14sp"
        theme_text_color: "Custom"
        text_color: 0.9, 0.9, 0.9, 1
        halign: "left"
        valign: "center"
        size_hint_x: 0.6

    MDLabel:
        id: val_label
        text: root.valoare
        font_name: image_path("menu/RAVIE.TTF")
        font_size: "16sp"
        theme_text_color: "Custom"
        text_color: hex('#FFD700')
        halign: "right"
        valign: "center"
        size_hint_x: 0.4

<PaginaStatistici>:
    name: 'statistici'
    Image:
        source: image_path("menu/dashboard_bg.png")
        allow_stretch: True
        keep_ratio: False
        size_hint: 1, 1
        pos_hint: {"center_x": .5, "center_y": .5}

    MDBoxLayout:
        md_bg_color: 0, 0, 0, 0.6
        size_hint: 1, 1

    FloatLayout:
        StandardHeader:
            title: "STATISTICI JUCATOR"
            back_screen: 'menu'
            show_back_button: True
            pos_hint: {"top": 1}
            id: header

        MDCard:
            orientation: "vertical"

            size_hint: 0.6, None
            adaptive_height: True 

            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            radius: [25,]
            md_bg_color: 0.1, 0.1, 0.2, 0.85
            line_color: hex('#448AFF')
            line_width: 2
            elevation: 4

            padding: ["20dp", "25dp", "20dp", "25dp"] # Padding sus/jos mai generos
            spacing: "8dp"

            RandStatistica:
                titlu: "CREDITE:"
                valoare: "0"
                id: row_credite

            MDBoxLayout:
                size_hint_y: None
                height: "10dp" # Înălțimea containerului liniei
                padding: [10, 0] # Padding lateral

                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    Line:
                        points: [self.x, self.center_y, self.right, self.center_y]
                        width: 1

            RandStatistica:
                titlu: "QUIZ-URI JUCATE:"
                valoare: "0"
                id: row_jucate

            RandStatistica:
                titlu: "QUIZ-URI REZOLVATE:"
                valoare: "0"
                id: row_rezolvate

            RandStatistica:
                titlu: "TIMP MEDIU:"
                valoare: "0.0 min"
                id: row_timp

            RandStatistica:
                titlu: "QUIZURI DEBLOCATE:"
                valoare: "0 / 30"
                id: row_regiuni

            RandStatistica:
                titlu: "COSMETICE:"
                valoare: "0"
                id: row_cosmetici

            MDBoxLayout:
                size_hint_y: None
                height: "10dp"
                canvas:
                    Color:
                        rgba: 1, 1, 1, 0.2
                    Line:
                        points: [self.x, self.center_y, self.right, self.center_y]
                        width: 1

            RandStatistica:
                titlu: "PROGRES TOTAL:"
                valoare: "0%"
                id: row_progres