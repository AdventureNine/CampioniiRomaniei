<CosmeticCard>:
    orientation: 'vertical'
    size_hint: 1, None  
    height: "260dp"
    
    spacing: "5dp"
    padding: "8dp"

    canvas.before:
        Color:
            rgba: (0, 0, 0, 0.3)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]

    RelativeLayout:
        Image:
            source: root.source
            color: (1, 1, 1, 1) if root.is_owned else (0.4, 0.4, 0.4, 1)

        Image:
            source: image_path("ui/lock.png")
            size_hint: None, None
            size: "24dp", "24dp"
            pos_hint: {'top': 0.95, 'right': 0.95}
            opacity: 0 if root.is_owned else 1

    Label:
        text: root.item_name
        size_hint_y: None
        height: "22dp"
        font_size: '14sp'
        bold: True
        text_size: self.width, None
        halign: 'center'
        valign: 'middle'

    Label:
        text: root.price + " Credite" if not root.is_owned else "Deținut"
        size_hint_y: None
        height: "18dp"
        font_size: '13sp'
        color: (1, 0.8, 0, 1)

    Button:
        text: "ECHIPAT" if root.is_equipped else ("ECHIPEAZĂ" if root.is_owned else "CUMPĂRĂ")
        size_hint_y: None
        height: "35dp"
        font_size: '12sp'
        background_normal: ''
        background_color: (0.2, 0.6, 0.2, 1) if not root.is_owned else (0.2, 0.4, 0.8, 1)
        disabled: root.is_equipped
        on_release: app.sm.get_screen('cosmetics').handle_action(root)

<CosmeticsScreen>:
    Image:
        source: image_path("menu/dashboard_bg.png")
        fit_mode: "cover"
        size_hint: 1, 1

    Widget:
        canvas:
            Color:
                rgba: 0, 0, 0, 0.4
            Rectangle:
                pos: self.pos
                size: self.size

    BoxLayout:
        orientation: 'vertical'

        StandardHeader:
            title: "MAGAZIN COSMETICE"
            pos_hint: {'top': 1}
            back_screen: 'menu'

        ScrollView:
            do_scroll_x: False
            bar_width: "10dp"
            effect_cls: "ScrollEffect"

            GridLayout:
                id: cosmetics_grid
                cols: 4
                spacing: "15dp"
                padding: "20dp"

                size_hint_y: None
                height: self.minimum_height